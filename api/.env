# 🌊 Configuración del servidor Aqua River Park
# 🌐 Puerto del servidor
PORT=4000

# 🛠️ Configuración de la base de datos MySQL
DB_HOST=localhost         # Cambia si estás en hosting o Docker
DB_NAME=aqua_river_park   # Nombre de tu base de datos
DB_USER=tu_usuario        # 👉 Coloca aquí tu usuario de MySQL
DB_PASS=74183     # 👉 Coloca aquí tu contraseña de MySQL

# 🔐 Clave secreta para JWT
JWT_SECRET=tu_jwt_secreto_seguro

# 📧 Configuración de Mailtrap o SMTP
MAIL_USER=mailtrap_user       # 👉 Desde https://mailtrap.io o tu SMTP
MAIL_PASS=mailtrap_pass
